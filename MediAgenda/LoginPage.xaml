<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediAgenda.LoginPage"
             Title="LoginPage">
    
    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label Text="MediAgenda" FontSize="32" HorizontalOptions="Center"/>
        <Entry x:Name="emailEntry" Placeholder="Correo electrónico"/>
        <Entry x:Name="passwordEntry" Placeholder="Contraseña" IsPassword="True"/>
        <Button Text="Iniciar sesión" Clicked="OnLoginClicked"/>
        <Label x:Name="messageLabel" TextColor="Red" IsVisible="False"/>
    </VerticalStackLayout>
    
</ContentPage>