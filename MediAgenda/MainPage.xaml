<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediAgenda.MainPage"
             Title="Especialidades">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Especialidades médicas disponibles" FontSize="24"/>

            <Button Text="Cardiología" Clicked="OnEspecialidadClicked"/>
            <Button Text="Dermatología" Clicked="OnEspecialidadClicked"/>
            <Button Text="Pediatría" Clicked="OnEspecialidadClicked"/>
            <Button Text="Neurología" Clicked="OnEspecialidadClicked"/>
            <Button Text="Medicina General" Clicked="OnEspecialidadClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

