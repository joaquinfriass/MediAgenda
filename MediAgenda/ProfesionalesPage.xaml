<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediAgenda.ProfesionalesPage"
             Title="ProfesionalesPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="ðŸ©º Profesionales disponibles" FontSize="20" />

            <CollectionView x:Name="profesionalesView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightBlue" Padding="10">
                            <StackLayout>
                                <Label Text="{Binding Nombre}" FontAttributes="Bold"/>
                                <Label Text="{Binding Especialidad}" FontSize="14"/>
                                <Label Text="{Binding Clinica}" FontSize="14"/>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>