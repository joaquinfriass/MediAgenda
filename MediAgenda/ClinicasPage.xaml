<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediAgenda.ClinicasPage"
             Title="ClinicasPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="🏥 Clínicas disponibles en la red MediAgenda"
                   FontSize="20" />

            <CollectionView x:Name="clinicasView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray" Padding="10">
                            <StackLayout>
                                <Label Text="{Binding Nombre}" FontAttributes="Bold"/>
                                <Label Text="{Binding Direccion}" FontSize="14"/>
                                <Label Text="{Binding Ciudad}" FontSize="14"/>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>